{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "module": "esnext",
    "baseUrl": "src",
    "paths": {
      "@definitions/*": ["lib/definitions/*"],
      "@definitions": ["lib/definitions"],
      "@interfaces": ["lib/interfaces"],
      "@interfaces/*": ["lib/interfaces/*"],
      "@redux": ["lib/redux"],
      "@redux/*": ["lib/redux/*"],
      "@static/*": ["../public/static/*"],
      "@styled/*": ["lib/styled/*"],
      "@styled": ["lib/styled"],
      "@constants/*": ["lib/constants/*"],
      "@constants": ["lib/constants"]
    }
  },
  "exclude": [
    "node_modules",
    "coverage",
    "__mocks__",
    "__test__",
    ".next",
    ".github",
    "dist",
    "out"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
